{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.6/MicrosoftTeams.schema.json",
  "manifestVersion": "1.6",
  "id": "{{APPLICATION_ID}}",
  "version": "{{VERSION}}",
  "packageName": "{{PACKAGE_NAME}}",
  "developer": {
    "name": "Troy Kirin",
    "websiteUrl": "https://{{HOSTNAME}}",
    "privacyUrl": "https://{{HOSTNAME}}/privacy.html",
    "termsOfUseUrl": "https://{{HOSTNAME}}/tou.html"
  },
  "name": {
    "short": "Rasa",
    "full": "Atlas (Rasa React MsTeams App)"
  },
  "description": {
    "short": "Proof of Concept Connecting Rasa to MS Teams",
    "full": "Proof of Concept Connecting Rasa to MS Teams"
  },
  "icons": {
    "outline": "icon-outline.png",
    "color": "icon-color.png"
  },
  "accentColor": "#F9F9FA",
  "configurableTabs": [
    {
      "configurationUrl": "https://{{HOSTNAME}}/rasaTab/config.html?name={loginHint}&tenant={tid}&group={groupId}&theme={theme}",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupchat"]
    }
  ],
  "staticTabs": [
    {
      "entityId": "ceaaa1d0-bd6f-11ea-a709-5fbdf9a14333",
      "name": "About Atlas",
      "contentUrl": "https://{{HOSTNAME}}/atlasBot/aboutAtlas.html",
      "scopes": ["personal"]
    }
  ],
  "bots": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "needsChannelSelector": true,
      "isNotificationOnly": false,
      "scopes": ["team", "personal"],
      "commandLists": [
        {
          "scopes": ["team", "personal"],
          "commands": [
            {
              "title": "Help",
              "description": "Shows help information"
            }
          ]
        }
      ],
      "supportsFiles": true
    }
  ],
  "connectors": [],
  "composeExtensions": [
    {
      "botId": "{{MICROSOFT_APP_ID}}",
      "canUpdateConfiguration": true,
      "commands": [
        {
          "id": "atlasExtentionMessageExtension",
          "title": "Atlas Extention",
          "description": "Add a clever description here",
          "initialRun": true,
          "type": "action",
          "context": ["compose", "commandBox", "message"],
          "fetchTask": true,
          "context": ["compose", "commandBox", "message"],
          "parameters": [
            {
              "name": "param",
              "title": "param",
              "description": ""
            }
          ]
        }
      ]
    }
  ],
  "permissions": ["identity", "messageTeamMembers"],
  "validDomains": [
    "643bdbd4b376.ngrok.io",
    "reactmsteamstabsapp.azurewebsites.net"
  ],
  "showLoadingIndicator": true
}
